<!DOCTYPE html>

<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport"
	      content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ml-poc</title>

	<environment include="Development">
		<link rel="stylesheet"
		      href="~/css/bootstrap-mlp.css" />
		<link rel="stylesheet"
		      href="~/css/site.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet"
		      href="~/css/bootstrap-mlp.min.css" />
		<link rel="stylesheet"
		      href="~/css/site.min.css" />
	</environment>
</head>

<body class="p-0">

	<!-- ========================================================================================================== -->
	<!-- Masthead -->
	<nav class="navbar bg-info">
		<div class="navbar-header">
			<a asp-page="/Index"
			   class="h1 text-white">Proof of Capability - Mavenlink integration</a>
		</div>
	</nav>



	<div class="container-fluid body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; 2018 - mlpoca [Custom Layout]</p>
		</footer>
	</div>

	<environment include="Development">
		<script src="~/js/jquery.js"></script>
		<script src="~/js/bootstrap-mlp.js"></script>
		<script src="~/js/site.js"
		        asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/jquery.min.js"></script>
		<script src="~/js/bootstrap-mlp.min.js"></script>
		<script src="~/js/site.min.js"
		        asp-append-version="true"></script>
	</environment>

	@RenderSection("Scripts", required: false)
</body>
